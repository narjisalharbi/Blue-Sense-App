  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__)) if defined?(flutter_install_all_ios_pods)

  # أو يمكنك إضافة الـ plugins يدويًا:
  # pod 'Firebase/Core'
  # pod 'Firebase/Auth'
  # pod 'cloud_firestore'
end